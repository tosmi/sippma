<tr>
  <td class="patient-click" data-link="<%= patient_consultations_path(patient) %>"><%= patient.firstname %></td>
  <td class="patient-click" data-link="<%= patient_consultations_path(patient) %>"><%= patient.lastname %></td>
  <td class="patient-click" data-link="<%= patient_consultations_path(patient) %>"><%= patient.zip %> <%= patient.city %>, <%= patient.street %></td>
  <td class="patient-click" data-link="<%= patient_consultations_path(patient) %>"><%= patient.ssn %> <%= patient.birthdate.strftime("%d.%m.%Y") %></td>
  <td>
    <div class="btn-toolbar">
      <div class="btn-group">
	<button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
	  <span class="glyphicon glyphicon-option-horizontal"></span>
	</button>
	<ul class="dropdown-menu" role="menu">
	  <li><%= link_to 'Edit', edit_patient_path(patient) %></li>
	  <li><%= link_to 'Delete', patient, method: :delete, data: { confirm: "Are you sure?"} %></li>
	</ul>
      </div>
    </div>
</td>
</tr>
