<div class="container center">
  <h1>Create a new patient record</h1>
  <%= form_for(@patient) do |f| %>
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
      	<%= f.text_field :firstname, class: 'form_control', placeholder: 'Firstname' %>
      </div>
      <div class="col-md-4">
	<%= f.text_field :firstname, class: 'form_control', placeholder: 'Lastname' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-1 col-md-offset-2">
	<%= f.text_field :zip, class: 'form_control', placeholder: 'Zip code' %>
      </div>
      <div class="col-md-3">
      	<%= f.text_field :city, class: 'form_control', placeholder: 'City' %>
      </div>
      <div class="col-md-4">
	<%= f.text_field :street, class: 'form_control', placeholder: 'Street' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 col-md-offset-2">
	<%= date_select :patient, :birthdate, start_year: 1900 %>
      </div>
      <div class="col-md-1">
      <%= f.text_field :ssn, class: 'form_control', placeholder: 'SSN' %>
      </div>
      <div class="col-md-3">
	<%= f.text_field :insurance, class: 'form_control', placeholder: 'Insurance' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 col-md-offset-2">
	<%= f.text_field :phonenumber1, class: 'form_control', placeholder: 'Phonenumber 1' %>
      </div>
      <div class="col-md-2">
      <%= f.text_field :phonenumber2, class: 'form_control', placeholder: 'Phonenumber 2' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
      <%= f.text_field :email, class: 'form_control', placeholder: 'Email address' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
      <%= f.submit "Create patient", class: "btn btn-primary "%>
      </div>
    </div>
  <% end %>
</div>
