<div id="invoice-identity">

  <div id="invoice-logo">
    <img src="/assets/springbrunn.jpg" alt="Springbrunn Logo" id="springbrunnimg">
  </div>

  <div id="invoice-address">
    <%= settings.title%> <%= settings.firstname %> <%= settings.lastname %><br/>
    <%= settings.street %><br/>
    <%= settings.zip %> <%= settings.city %><br/>
    Tel. <%= settings.phonenumber %><br/>
    <%= settings.email %><br/>
  </div>

  <div style="clear:both"></div>

  <div id="invoice-customer">
    <%= patient.firstname %> <%= patient.lastname %><br/>
    <%= patient.insurance %> <%= patient.ssn %> <%= patient.birthdate.strftime("%d%m%y") %><br/>
    <% unless @parents.nil? %>
      <%= f.select(:parent_id, options_from_collection_for_select(@parents, :id, :firstname), :include_blank => true) %>
    <% end %>
    <%#= select_tag(:parent_id, options_from_collection_for_select(@parents, :id, :firstname), :include_blank => true) %>
    <%= patient.street %><br/>
    <%= patient.zip %> <%= patient.city %><br/>
  </div>
</div>


<div class="invoice-number-date">
  <div id="invoice-date">
    <%= settings.city %>, <%= Date.today.strftime("%-d.%-m.%Y") %>
  </div>

  <div class="invoice-number">
    <strong>Wahlarzt-Honorarnote: <%= invoice.invoicenumber %></strong>
  </div>

  <div id="invoice-consultation">
    <% unless @print  %>
      Untersuchung am <%= Date.today.strftime("%-d.%-m.%Y") %>
    <% else %>
      Untersuchung am <input id="invoice-consultation-date" type="text" rows="1" value="<%= Date.today.strftime("%-d.%-m.%Y") %>">
    <% end %>
  </div>

</div>
