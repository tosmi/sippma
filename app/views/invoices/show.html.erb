<%= stylesheet_link_tag "invoice" %>
<%= stylesheet_link_tag "invoice_print", media: 'print' %>

<% unless @print %>
  <%= render 'shared/the_flash' %>
<% else %>
  <%= javascript_tag "$(document).ready(function() {window.print();})"%>
<% end %>

<div class="invoice-page">
  <div class="invoice-header">
    <%= render 'header' %>
  </div>

  <div class="invoice-main">
    <%= render 'display' %>
  </div>

  <div class="invoice-footer">
    <%= render 'refund' %>

    <% unless @print %>
      <div id="invoice-buttons">
	<div class="row">
	  <div class="col-md-3 col-md-offset-2">
	    <%= link_to 'Back', patient_invoices_path(@patient), class: 'btn btn-primary btn-block' %>
	  </div>
	  <div class="col-md-3">
	    <%= link_to 'Print', { controller: 'invoices', action: 'show', print: true }, class: 'btn btn-primary btn-block', target: '_blank', name: 'print-invoice' %>
	  </div>
	</div>
    <% end %>
  </div>
</div>
