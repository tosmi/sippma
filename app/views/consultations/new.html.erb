<div class="container center">
  <h1>New consultation for <%= @patient.firstname %> <%= @patient.lastname %></h1>
  <%= form_for(@consultation, url: patient_consultations_path) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
	<%= f.text_area :content, class: 'form_control', placeholder: 'Content' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
	<%= f.text_field :diagnosis, class: 'form_control', placeholder: 'Diagnosis' %>
      </div>
    <div class="row">
      <div class="col-md-2 col-md-offset-4">
	<%= f.submit "Save consulation", class: "btn btn-primary btn-block"%>
      </div>
      <div class="col-md-2">
	<%= link_to "Back", patients_path, class: "btn btn-primary btn-block "%>
      </div>
    </div>
  <% end %>
</div>
