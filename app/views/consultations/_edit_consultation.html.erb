<%= render 'shared/error_messages', object: f.object %>
<div class="form-group">
  <%= f.label 'Date' %>
  <%= f.datetime_field :date, value: @consultation.date.strftime("%d.%m.%Y %H:%M") %>
</div>
<div class="form-group">
  <%= f.label 'Content' %>
  <%= f.text_area :content, class: 'form-control consultation_content', autofocus: true %>
</div>
<div class="form-group">
  <%= f.label 'Diagnosis' %>
  <%= f.text_field :diagnosis, class: 'form-control' %>
</div>
<div class="row">
  <div class="col-md-2 col-md-offset-4">
    <%= f.submit "Save", class: "btn btn-primary btn-block"%>
  </div>
  <div class="col-md-2">
    <%= link_to "Cancel", :back, class: "btn btn-primary btn-block "%>
  </div>
</div>
